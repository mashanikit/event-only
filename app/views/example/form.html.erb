<%= form_for @job_application do |form| %>
  <div class "field">
    <%= form.label :full_name %>
    <%= form.text_field :full_name %>
  </div>

  <div class = "field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class = "field">
    <%= form.label :hobby %>
    <%= form.text_field :hobby %>
  </div>

  <div class = "field">
    <%= form.label :years_experience %>
    <%= form.number_field :years_experience %>
  </div>

  <div class = "field">
    <%= form.label :available_date %>
    <%= form.text_field :available_date %>
  </div>



  <%= form.submit %>
<%end%>

